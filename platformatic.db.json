{
  "server": {
    "hostname": "{PLT_SERVER_HOSTNAME}",
    "port": "{PORT}",
    "logger": {
      "level": "{PLT_SERVER_LOGGER_LEVEL}"
    }
  },
  "core": {
    "connectionString": "{DATABASE_URL}",
    "graphql": true,
    "ignore": {
      "versions": true
    }
  },
  "migrations": {
    "dir": "migrations",
    "autoApply": true,
    "table": "versions"
  },
  "types": {
    "autogenerate": true
  },
  "plugin": {
    "path": "plugin.js"
  }
}
